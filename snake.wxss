/* pages/snake/snake.wxss */
.score{
  display: flex;
}
.title{
  flex: 1;
  background: pink;
  height: 120rpx;
  text-align: center;
  font-size: 50rpx;
  line-height: 120rpx;
  color: white;
  border-radius: 30rpx;
}
.scoredetail{
  flex: 1;
  background: #BDC3FD;
  height: 150rpx;
  margin: 40rpx 20rpx;
  text-align: center;
  color: white;
  border-radius: 20rpx;
}
.scoredesc{
  line-height: 60rpx;
}
.scorenumber{
  line-height: 70rpx;
}
.scoredetail:last-child{
  margin-right: 20rpx;
}
.control{
  width: 100%;
  height: 100%;
}
.ground{
  width: 660rpx;
  height: 840rpx;
  margin-left: 60rpx;
}
.rows{
  width: 660rpx;
  height: 30rpx;
}
.block{/* 每一个小方块的颜色 */
  background: #ABDDFF;
  width: 30rpx;
  height: 30rpx;
  float: left;
}
.block_1{/* 蛇身颜色 */
  background-color:rgb(51, 128, 0);
}
.block_2{/* 食物的颜色 */
  background-color: rgb(255, 123, 0);
}
.block_3{/* 蛇头颜色 */
  background-color: greenyellow;
}